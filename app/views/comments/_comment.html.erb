<div class="media">
 <% if comment.user_id? %>
  <%= link_to '#', class: 'pull-left' do %>
   <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
 <% end %>
  <div class="media-body">
   <small>
     <%= comment.user.id %> commented <%= time_ago_in_words(comment.created_at) %> ago
     <% if policy(comment).destroy? && comment.body.present? %>
       | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
     <% end %>
   </small>
   <p><%= comment.body %></p>
 </div>
<% end %>