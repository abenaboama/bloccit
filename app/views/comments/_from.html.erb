<h4>Add a Comment</h4>
<%= form_for [topic, post, post.comments.new] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, placeholder: "Enter comment." %>
  <div class="form-group">
    <%= f.submit "Create Comment", class: 'btn btn-success' %>
  </div>
<% end %>
